{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "types": ["@testing-library/react"]
}
